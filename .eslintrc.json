{
	"extends": ["airbnb", "prettier", "prettier/react"],
	"plugins": ["prettier"],
	"parser": "babel-eslint", // Will use parser from babel, so eslint will understand everything that babel can
	"parserOptions": {
		"ecmaVersion": 2016,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {
		"quotes": [2, "backtick"]
	},
	"env": {
		// Not to fail these global vars.
		"es6": true, // Symbol, for example
		"browser": true, // window, documnet, etc
		"node": true,
		"jest": true
	}
}
